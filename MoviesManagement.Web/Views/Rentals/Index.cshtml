@model MoviesManagement.Web.ViewModels.RentalFormViewModel
@using MoviesManagement.Web.Models
@{
    ViewBag.Title = "Rental";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="page-header">
        <h1>Rental</h1>
    </div>
    @using (Html.BeginForm("Save", "Rentals"))
    {
        @Html.ValidationSummary(true, "Please correct those following errors")
        <div class="form-group">
            @Html.LabelFor(model => model.Customer.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.AutocompleteFor(model => model.Customer.Name, model => model.Customer.Id, "GetCustomers", "Rentals", false)

            </div>
        </div>
    }
</div>