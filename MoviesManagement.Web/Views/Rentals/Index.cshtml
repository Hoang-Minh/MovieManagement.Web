@model MoviesManagement.Web.ViewModels.RentalFormViewModel
@using MoviesManagement.Web.Models
@{
    ViewBag.Title = "Rental";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="page-header">
        <h1>Rental</h1>
    </div>
    @using (Html.BeginForm("Save", "Rentals"))
    {
        @Html.ValidationSummary(true, "Please correct those following errors")
        <div class="row">
            <div class="form-group">
                @Html.LabelFor(model => model.CustomerName, htmlAttributes: new { @class = "text-center control-label col-sm-12 col-md-2" })
                <div class="col-sm-12 col-md-10">
                    @Html.AutocompleteFor(model => model.Customer.Name, model => model.Customer.Id, "GetCustomers", "Rentals", false, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                @Html.ValidationMessageFor(x => x.Customer.Name)
            </div>
        </div>


        <div class="row">

            @Html.LabelFor(model => model.DateOfBirth, new { @class = "text-center control-label col-sm-12 col-md-2" })
            <div class="col-sm-12 col-md-10">
                <span class="twitter-typeahead">
                    @Html.TextBoxFor(x => x.DateOfBirth, new { @class = "typeahead tt-hint" })
                </span>
            </div>

            @Html.ValidationMessageFor(x => x.Customer.Birthdate)
        </div>

        <div class="row">
            @Html.LabelFor(model => model.MovieName, htmlAttributes: new { @class = "text-center control-label col-sm-12 col-md-2" })
            <div class="col-sm-12 col-md-10">
                @Html.AutocompleteFor(model => model.Movie.Name, model => model.Movie.Id, "GetMovies", "Rentals", false)
            </div>
            @Html.ValidationMessageFor(x => x.Movie.Name)
        </div>

    }
</div>